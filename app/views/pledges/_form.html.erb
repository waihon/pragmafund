<%= form_for([@project, @pledge]) do |f| %> 
  <%= render "shared/errors", object: @pledge %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>
        <%= f.text_field :email, size: 60 %>
      </li>
      <li class="required amounts">
        <%= f.label :amount %>
        <% Pledge::AMOUNT_LEVELS.each do |amount| %>
          <span class="amount">
            <%= f.radio_button :amount, amount %> <%= amount %>
          </span>
        <% end %>
      </li>
      <li>
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 40, rows: 7 %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", @project, class: "button" %>
    </p>
  </fieldset>
<% end %>